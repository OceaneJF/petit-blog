{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div>
    <a class="inline-block rounded border border-current px-8 py-3 text-sm font-medium text-indigo-600 transition hover:scale-110 hover:shadow-xl focus:outline-none focus:ring active:text-indigo-500"
        href="{{ path('app_article_new') }}">
        Create new
    </a>
    {% for article in articles %}
    <article
        class="hover:animate-background rounded-xl bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 p-0.5 shadow-xl transition hover:bg-[length:400%_400%] hover:shadow-sm hover:[animation-duration:_4s]">
        <div class="rounded-[10px] bg-white p-4 !pt-20 sm:p-6">
            <time datetime="2022-10-10" class="block text-xs text-gray-500">{{ article.dateCreation ?
                article.dateCreation|date('Y-m-d H:i:s') : '' }}</time>

            <a href="{{path('app_article_show',{id:article.id})}}">
                <h3 class="mt-0.5 text-lg font-medium text-gray-900">
                    {{ article.titre }}
                </h3>
            </a>

            <div class="mt-4 flex flex-wrap gap-1">
                <a href="{{path('app_article_show',{id:article.id})}}"
                    class="whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-xs text-purple-600">
                    Voir plus ->
                </a>
                <a href="{{path('app_article_edit',{id:article.id})}}"
                    class="whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-xs text-purple-600">
                    Modifier
                </a>
            </div>
        </div>
    </article>
    {% endfor %}
</div>

{% endblock %}