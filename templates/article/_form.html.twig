<div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-lg text-center">
        <h1 class="text-2xl font-bold sm:text-3xl">Creer un nouveau article!!!</h1>
    </div>
    {{ form_start(form,{class:"mx-auto mb-0 mt-8 max-w-md space-y-4"}) }}

    <div>
        <label class="">Titre</label>
        <div class="relative">
            {{ form_widget(form.titre,{attr:{class:"w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm"}}) }}
        </div>
    </div>
    <div>
        <label class="">Description</label>
        <div class="relative">
            {{ form_widget(form.description,{attr:{class:"w-full rounded-lg border-gray-200 p-4 pe-12 text-sm
            shadow-sm"}}) }}
        </div>
    </div>

    <div class="flex items-center justify-between">

        <button type="submit" class="inline-block rounded-lg bg-blue-500 px-5 py-3 text-sm font-medium text-white">
            {{button_label|default("Cr√©er")}}
        </button>
    </div>

    <a href="{{ path('app_article_index') }}">back to list</a>
    {{ form_end(form) }}
</div>